{
    "require": {
        "twig/twig": "~3.0",
        "mailgun/mailgun-php": "^2.1",
        "phpmailer/phpmailer": "~6.0",
        "symfony/http-client": "^5.4",
        "nyholm/psr7": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "Core/",
            "App\\": "App/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "scripts": {
        "check-style": "php-cs-fixer fix --diff --verbose --dry-run .",
        "fix-style": "php-cs-fixer fix ." 
    } 
}
